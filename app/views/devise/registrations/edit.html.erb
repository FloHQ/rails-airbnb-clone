<div class="profile-page" style="background-image: url('<%= asset_path "supernanny-double.png"  %>');">
<div class="container">
  <br>
  <h3>Editez votre profil</h3>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <p>
      <%= f.input :current_password, :label=> "Mot de passe actuel", hint: "Nécessaire pour confirmer vos modifications", required: true %>
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :first_name, :label=> "Prénom" %>
      <%= f.input :last_name, :label=> "Nom" %>
      <%= f.input :phone_number, :label=> "Numéro de téléphone" %>
      <%= f.input :age %>
      <%= f.input :gender, :label=> "Sexe" %>
      <%= f.input :short_description, :label=> "Décrivez-vous!" %>
      <%= f.input :profile_picture, :label=> "Photo de profil" %>
      <%= f.input :profile_picture_cache, as: :hidden %>
      <%= f.input :appartment_equipment, :label=> "Détails de l'appartement" %>
      <%= f.input :appartment_rules, :label=> "Règles de l'appartement" %>
      <%= f.input :appartment_address, :label=> "Adresse de l'appartement" %>
      <%= f.input :appartment_photo, :label=> "Photo de l'appartement" %>
      <%= f.input :appartment_photo_cache, as: :hidden %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <br/>
      <h3> Changer le mot de passe </h3>
      <%= f.input :password, :label=> "Mot de passe", autocomplete: "off", hint: "Laissez vide si aucun changement souhaité", required: false %>
      <%= f.input :password_confirmation, :label=> "Confirmer mot de passe", required: false %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Mettre à jour" %>
    </div>
  <% end %>

  <h3>Clôturer mon compte</h3>

  <p>Pas content? <%= link_to "Clôturer mon compte", registration_path(resource_name), data: { confirm: "Etes-vous sûr?" }, method: :delete %></p>

  <%= link_to "Retour", :back %>
</div>
  <br>
</div>
