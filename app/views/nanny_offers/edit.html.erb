<div class="profile-page" style="background-image: url('<%= asset_path "supernanny-kid.png"  %>');">
  <div class="banner-content">
    <div class="container">
      <div class="row">
          <div class="col-xs-6 col-sm-8 col-lg-12">
            <div class="title-login">
            <br>
            <h3>Une modification concernant vos disponibilités ?</h3>
            </div>
            <div class="form-login">
            <%= simple_form_for [@nanny_offer] do |f| %>
              <div class="form-inputs">
                <%= f.input :start_date, :label=> "Date de début"  %>
                <%= f.input :end_date, :label=> "Date de fin"  %>
                <%= f.input :price %>
                <%= f.input :children_capacity, :label=> "Nombre d'enfants maximum" %>
                <%= f.input :nanny_description, :label=> "Votre description" %>
                <%= f.input :appartment_description, :label=> "La description de votre appartement" %>
              </div>
              <div class="form-actions">
                <%= f.submit class: "btn btn-yours", value: "Editer l'offre" %>
                <% end %>
              </div>
            </div>
          </div>
      </div>
    </div>
    <br>
  </div>
</div>
